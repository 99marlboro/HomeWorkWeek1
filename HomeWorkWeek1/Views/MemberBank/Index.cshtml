@model IEnumerable<HomeWorkWeek1.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>客戶銀行資訊</h2>
<p>
    @using (Html.BeginForm("Index", "MemberBank", FormMethod.Post))
    {
    <p>
        <table class="table">
            <tr>
                <td>
                    @Html.Label("銀行名稱:")<br />
                    @Html.Label("帳戶號碼:")<br />
                    @Html.Label("關鍵字:")
                </td>
                <td>
                    @Html.TextBox("BankName")<br />
                    @Html.TextBox("AccountNo")<br />
                    @Html.TextBox("KeyWord")
                </td>
                <td>
                    <input type="submit" value="搜尋" />
                </td>
            </tr>
        </table>
    </p>
    }
    </p>
<p>
    @Html.ActionLink("新增客戶銀行資訊", "Create", new { icMid = ViewData["iMid"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.銀行名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.分行代碼)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.帳戶號碼)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.是否已刪除)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.是否已刪除)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
            @Html.ActionLink("詳細", "Detail", new { id = item.Id }) |
            @Html.ActionLink("刪除", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
